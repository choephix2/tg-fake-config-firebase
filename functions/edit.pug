doctype html  
html(lang='en')  
  head
    title Edit #{doc}
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jsoneditor/5.28.2/jsoneditor.js")
    link(href='https://cdnjs.cloudflare.com/ajax/libs/jsoneditor/5.28.2/jsoneditor.css', rel='stylesheet')
    style().
      * { margin:0; padding:0 }
      #editor_container { height: 100% }
      #toolbar
      {
        position: absolute;
        top: 0;
        right: 0;
      }
      #toolbar button
      {
        width: 100%;
        height: 30px;
        color: white;
        background: none;
        border: none;
        outline: none;
        cursor: pointer;
        transition: color 50ms;
        padding: 0 1.5em
      }
      #toolbar button:hover { color: aqua; }
      #toolbar button:active { color: LightSkyBlue; }
      .jsoneditor-poweredBy { display: none; }
      #footer 
      { 
        color:#ace;
        font-family:monospace;
        font-size:.75em; 
        padding: .25em;
      }
      input[type=checkbox] {
        height: 1em;
        zoom: 200%;
      }
  body
    #editor_container
    #toolbar
      button(onclick='onClickSave()') ðŸ’¾&#xFE0E; Apply
    #footer
      p Powered by josdejong/jsoneditor + ACE editor + Google Firebase

    script(type='text/javascript').
      var doc = "#{doc}"
      var json = `!{json}`

      var container = document.getElementById("editor_container")
      var options = {
        history : true,
        mode : 'tree',
        modes : ['tree','code'],
        search : false,
        navigationBar : false,
        statusBar : false,
        enableSort : false
      }
      var editor = new JSONEditor(container, options)
      editor.set( JSON.parse(json) )

      function onClickSave() {
        const json = editor.getText()
        const Http = new XMLHttpRequest();
        const url=`/set/${doc}`;
        Http.open("POST", url);
        Http.send(json);
        Http.onreadystatechange=(e)=>{ console.log(Http.responseText) }
      }